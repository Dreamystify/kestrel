{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": false, 
    "noEmit": false,
    "declaration": true,
    "declarationMap": false,        // exclude declaration source maps
    "sourceMap": false,             // exclude JavaScript source maps
    "inlineSourceMap": false,

    "rootDirs": ["./src"],         // only include src directory for build
    "outDir": "./lib",

    "types": [],                   // avoid pulling in @types/jest during build
    "skipLibCheck": true,          // keep builds fast and resilient
    "moduleResolution": "bundler"     // re-affirm in case base changes later
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests", "node_modules", "lib", "**/*.spec.ts"]
}
